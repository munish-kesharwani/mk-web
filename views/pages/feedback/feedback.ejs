<!DOCTYPE html>
<html>
  <head>
    <title>Hi ! I am Munish.</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="./css/style.css" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=block"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('../partials/header.ejs'); -%>
    <div class="shadow-none p-1 mb-5 bg-dark rounded">
      <div class="maincontent1">
        <div class="container">
          <BR />
          <div class="row">
            <div class="col-md-4">
              <p>Feedback Form</p>

              <form class="feedback-form" action="/feedback" method="post">
                <div class="form-group">
                  <label for="feedback-form-email"> Enter your email-id </label>
                  <input
                    type="text"
                    class="form-control"
                    id="email"
                    placeholder=""
                    name="email"
                  />
                </div>
                <div class="form-group">
                  <label for="feedback-form-email"> Enter your name </label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder=""
                    name="name"
                  />
                </div>
                <div class="form-group">
                  <label for="feedback-form-email"> Enter your feedback </label>
                  <input
                    type="text"
                    class="form-control"
                    id="message"
                    placeholder=""
                    name="message"
                  />
                </div>
                <button type="submit" class="btn btn-secondary float-right">
                  Submit
                </button>
              </form>
            </div>
            <div class="col-md-8">
              <p>Feedback Listing</p>
              <!-- feedback #1 should be here .. MVP1 simple listing -->
              <table class="table table-striped table-light">
                <thread
                  ><tr>
                    <th>Name</th>
                    <th>E-mail</th>
                    <th>Message</th>
                  </tr></thread
                >
                <% for(var i=0; i < feedback.length; i++) { %>
                <tr>
                  <td><%= feedback[i].name %></td>
                  <td><%= feedback[i].email %></td>
                  <td><%=feedback[i].message %></td>
                </tr>
                <% } %>
              </table>
            </div>
          </div>
          <!--- for the row-->
          <!-- if needed add more rows-->
        </div>
      </div>
    </div>

    <%- include('../partials/footer.ejs'); -%>
  </body>
</html>
